<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        a {
            text-decoration: none;
        }

        a:hover {
            opacity: .8;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('_header') %>
        <div class="row mb-5">
            <form class="d-flex" method="get" action="/search">
                <div class="col-auto">
                    <label class="mt-2 mx-2">キーワード検索</label>
                </div>
                <div class="col-md-10">
                    <input class="form-control" name="search" type="text" placeholder="商品を検索" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">検索</button>
                </div>
            </form>
        </div>
        <!--
        <form class="d-flex" action="/price" method="get">
            <div class="row mt-2 mb-5 g-1">
                <div class="col-auto">
                    <label class="mt-2 mx-2">価格検索</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" type="text" name="price-start" placeholder="例：100">
                </div>
                <div class="col-auto">
                    <label class="text-center mt-2">～</label>
                </div>
                <div class="col-auto">
                    <input class="form-control" type="text" name="price-end" placeholder="例：1000">
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" type="submit">絞り込み</button>
                </div>
            </div>
        </form>
        -->
        <div class="row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% for (var c in content) { %>
                <% var data=content[c] %>
                    <a href="/products?pid=<%= data.itemcd %>">
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top h-100" src="<%= data.filepath %>" max-height="225"
                                    alt="">

                                <div class="card-body">
                                    <h3>
                                        <%= data.itemname %>
                                    </h3>

                                    <p>
                                        <font color="#CB1B45">
                                            <%= Math.round(data.itemprice).toLocaleString() %>円
                                        </font>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                    <% } %>
        </div>
    </div>
    </div>
    <p class="text-center mt-5"><a href="/admin">管理者ページ</a></p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>